<div id="comments"></div>
<link rel="stylesheet" href="https://unpkg.com/gitalk@1.7.2/dist/gitalk.css">
<script src="https://cdn.bootcdn.net/ajax/libs/gitalk/1.7.2/gitalk.min.js"></script>


<script type="text/javascript">
    var gitalk = new Gitalk({
        clientID: '<%=theme.gitalk.ClientID %>',
        clientSecret: '<%=theme.gitalk.ClientSecret %>',
        repo: '<%=theme.gitalk.repo %>',
        owner: '<%=theme.gitalk.githubID %>',
        admin: ['<%=theme.gitalk.adminUser %>'],
        id: decodeURI('<%=theme.gitalk.id %>'),
        distractionFreeMode: '<%=theme.gitalk.distractionFreeMode %>',
        language: '<%=theme.gitalk.language %>',
        perPage: parseInt('<%=theme.gitalk.perPage %>',10)
    })
    gitalk.render('comments')
</script>
